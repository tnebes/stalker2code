{
    "name": "stalker-2-navigator",
    "displayName": "S.T.A.L.K.E.R. 2 Navigator",
    "description": "VS Code extension for S.T.A.L.K.E.R. 2 config modding",
    "version": "0.1.3",
    "publisher": "stalker2-modder",
    "engines": {
        "vscode": "^1.96.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "languages": [
            {
                "id": "stalker2-config",
                "aliases": [
                    "Stalker 2 Config",
                    "stalker-cfg"
                ],
                "extensions": [
                    ".cfg"
                ],
                "filenamePatterns": [
                    "*.cfg*"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "stalker2-config",
                "scopeName": "source.stalker2-config",
                "path": "./syntaxes/stalker2-config.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "S.T.A.L.K.E.R. 2 Navigator",
            "properties": {
                "stalker2.resourcesPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the extracted Stalker 2 resources folder (files are usually searching in Stalker2 and subfolders)."
                }
            }
        },
        "commands": [
            {
                "command": "stalker2.clearCache",
                "title": "Stalker 2: Clear Symbol Cache"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/vscode": "^1.96.0",
        "@typescript-eslint/eslint-plugin": "^7.0.0",
        "@typescript-eslint/parser": "^7.0.0",
        "@vscode/vsce": "^3.7.1",
        "eslint": "^8.57.0",
        "typescript": "^5.4.0"
    }
}