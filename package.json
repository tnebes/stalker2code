{
  "name": "stalker-2-navigator",
  "repository": {
    "type": "git",
    "url": "https://github.com/tnebes/stalker2code.git"
  },
  "displayName": "STALKER 2 Navigator",
  "description": "Navigate, compare and see the source of configuration files for S.T.A.L.K.E.R. 2",
  "version": "1.4.5",
  "publisher": "tnebes",
  "icon": "stalker2NavigatorSmall.png",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "stalker2-config",
        "aliases": [
          "Stalker 2 Config",
          "stalker-cfg"
        ],
        "extensions": [
          ".cfg"
        ],
        "filenamePatterns": [
          "*.cfg*"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "stalker2-config",
        "scopeName": "source.stalker2-config",
        "path": "./syntaxes/stalker2-config.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "S.T.A.L.K.E.R. 2 Navigator",
      "properties": {
        "stalker2.resourcesPath": {
          "type": "string",
          "default": "",
          "description": "Path to the extracted Stalker 2 resources folder (files are usually searching in Stalker2 and subfolders)."
        },
        "stalker2.search.maxDepth": {
          "type": "number",
          "default": 12,
          "description": "Maximum directory depth to search for definitions."
        },
        "stalker2.search.maxFiles": {
          "type": "number",
          "default": 50000,
          "description": "Maximum number of files to scan during a global search."
        },
        "stalker2.search.timeout": {
          "type": "number",
          "default": 15000,
          "description": "Timeout in milliseconds for global search operations."
        }
      }
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "stalker2-navigator",
          "title": "S.T.A.L.K.E.R. 2",
          "icon": "stalker2NavigatorSmall.png"
        }
      ]
    },
    "views": {
      "stalker2-navigator": [
        {
          "icon": "stalker2NavigatorSmall.png",
          "id": "stalker2.inheritanceView",
          "name": "Inheritance Structure",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "stalker2.clearCache",
        "title": "Stalker 2: Clear Symbol Cache"
      },
      {
        "command": "stalker2.showSetup",
        "title": "Stalker 2: Show Setup/Intro Screen"
      },
      {
        "command": "stalker2.showInheritance",
        "title": "Stalker 2: Show Inheritance Structure"
      },
      {
        "command": "stalker2.showComputedView",
        "title": "Stalker 2: Show Computed View"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "stalker2.showInheritance",
          "when": "resourceLangId == stalker2-config",
          "group": "navigation@1"
        },
        {
          "command": "stalker2.showComputedView",
          "when": "resourceLangId == stalker2-config",
          "group": "navigation@2"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "npm version patch --no-git-tag-version && powershell -Command \"if (!(Test-Path built)) { New-Item -ItemType Directory built }; vsce package --out ./built/\""
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.57.0",
    "typescript": "^5.4.0"
  }
}
